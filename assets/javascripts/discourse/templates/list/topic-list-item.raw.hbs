<div class="card">
  <div class="card-block">
    {{#if topic.thumbnails}}
      <div class="pull-right m-l-1">
        <img src="{{topic.thumbnails.normal}}" alt="" width="190px" height="190px" />
      </div>
    {{/if}}
    <a href="{{topic.url}}">
      <h2 class="card-title">
        <strong>
          {{topic.title}}
        </strong>
      </h2>
    </a>
    <div class="card-meta-data">
      <span class="show-first">
        {{#each topic.posters as |poster|}}
          <a href="{{poster.user.username}}" data-user-card="{{poster.user.username}}">
            {{avatar poster avatarTemplatePath="user.avatar_template" usernamePath="user.username" imageSize="large" extraClasses="img-circle pull-left"}}
          </a>
        {{/each}}
      </span>
      <span class="show-first">
        {{#each topic.posters as |poster|}}
          <a href="/users/{{poster.user.username}}" data-user-card="{{poster.user.username}}">
            <strong>
              {{poster.user.username}}
            </strong>
          </a>
        {{/each}}
      </span>
      <span class="show-first">
        {{#each topic.posters as |poster|}}
          {{#if topic.user.title}}
            <span class="separator">–</span>
            <span>
              {{poster.user.title}}
            <span>
          {{/if}}
        {{/each}}
      </span>
      <div class="text-muted">
        {{format-date topic.created_at leaveAgo="true"}}
      </div>
    </div>
    {{#if topic.hasExcerpt}}
      <p class="card-text">
        {{{topic.excerpt}}}
        {{#if topic.excerptTruncated}}
          <br />
          <a href="{{topic.url}}">
            <strong>
              {{i18n 'read_more'}}
            </strong>
          </a>
        {{/if}}
      </p>
    {{/if}}
    <ul class="list-inline m-b-0">
      <li class="list-inline-item font-weight-bold">
        <a href="{{topic.url}}">
          {{topic.replyCount}}
          <span class="action">
            Répondre
          </span>
        </a>
      </li>
      {{#if showPosters}}
        <li class="list-inline-item font-weight-bold">
          <a href="{{topic.url}}">
            <i class="fa fa-heart-o"></i>
            {{topic.posters.length}}
          </a>
        </li>
      {{/if}}
      {{#unless hideCategory}}
        {{#unless topic.isPinnedUncategorized}}
          <li class="list-inline-item">
            <a href="{{topic.category.url}}">
              <span class="tag tag-default font-weight-bold">
                {{topic.category.name}}
              </span>
            </a>
          </li>
        {{/unless}}
      {{/unless}}
    </ul>
  </div>
